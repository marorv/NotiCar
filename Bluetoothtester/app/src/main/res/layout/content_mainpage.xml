<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.birathepan.bluetoothtester.Mainpage"
    tools:showIn="@layout/activity_mainpage"
    android:background="@color/darkgrey"
    >


    //#bratti


    <Button
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/disconnectbutton"
        android:background="@drawable/bluetoothlogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Text to confirm bluetooth connection.This text is not supposed to be seen in the app."
        android:id="@+id/result"
        android:layout_below="@+id/imageView"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignRight="@+id/disconnectbutton"
        android:layout_alignEnd="@+id/disconnectbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/connectbutton2"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/result"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:src="@drawable/bluetoothlogo"
        android:layout_alignTop="@+id/disconnectbutton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
