<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.birathepan.bluetoothtester.status"
    tools:showIn="@layout/activity_status"
    android:background="@color/darkgrey"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tekst"
        android:id="@+id/btResult"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Car images -->
    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/noredcar"
        android:src="@drawable/transport"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/driverdoor"
        android:src="@drawable/driver_door"
        android:layout_alignTop="@+id/noredcar"
        android:layout_toRightOf="@+id/btResult"
        android:layout_toEndOf="@+id/btResult" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/frontpassenger"
        android:src="@drawable/front_passenger"
        android:layout_alignTop="@+id/noredcar"
        android:layout_toRightOf="@+id/btResult"
        android:layout_toEndOf="@+id/btResult" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/backleft"
        android:src="@drawable/back_left"
        android:layout_alignTop="@+id/noredcar"
        android:layout_toRightOf="@+id/btResult"
        android:layout_toEndOf="@+id/btResult" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/backright"
        android:src="@drawable/back_right"
        android:layout_alignTop="@+id/noredcar"
        android:layout_toRightOf="@+id/btResult"
        android:layout_toEndOf="@+id/btResult" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/statustekstonscstreen"
        android:layout_below="@id/noredcar"
        android:textSize="20dp"
        android:textStyle="bold"

        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Status"
        android:id="@+id/status"
        android:layout_below="@+id/statustekstonscstreen"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        />


</RelativeLayout>
